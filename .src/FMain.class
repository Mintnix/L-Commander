Public Sub Form_Open()
    ''das passiert nach Start
    Dim hFile As Stream
    Dim sLine1 As String
    Dim sLine2 As String
    Dim sLine3 As String
    Dim sLine4 As String
    Dim sLine5 As String
    Dim sLine6 As String

    ''Konfigurationsdatei wird automatisch angelegt
    If Exist("~/.lc_config.txt") = False Then Shell "touch ~/.lc_config.txt" Wait 
    ''hier wird geladen und in Variablen gefüllt
    hFile = Open "~/.lc_config.txt" For Read
    Line Input #hFile, sLine1   'Hintergrund
    Line Input #hFile, sLine2   'Vordergrund
    Line Input #hFile, sLine3   'TabStop
    Line Input #hFile, sLine4   'Vorschau
    Line Input #hFile, sLine5   'Listen
    Line Input #hFile, sLine6   'Fullscreen
    
    If sLine1 = "" Then sLine1 = &HDFF7FF
    If sLine2 = "" Then sLine2 = &H000000
    If sLine3 = "" Then sLine3 = 0
    If sLine4 = "" Then sLine4 = 0
    If sLine5 = "" Then sLine5 = 0
    If sLine6 = "" Then sLine6 = 0
    iHindergrund = sLine1
    iVordergrund = sLine2
    Einstellungen.CheckBox1.Value = sLine3
    Einstellungen.CheckBox2.Value = sLine4
    Einstellungen.CheckBox3.Value = sLine5
    Einstellungen.CheckBox4.Value = sLine6
    ''Laden Ende

    Splitter1.Layout = [48, 4, 48]
    Splitter3.Layout = [3, 20, 3, 24, 24, 3, 20, 3]
    TextLabel1.Text = "Bereit für die Arbeit."
    Me.Background = iHindergrund
    Me.Foreground = iVordergrund
    FileView1.Background = iHindergrund
    FileView2.Background = iHindergrund
    FileView1.Dir = User.Home
    FileView2.Dir = User.Home
    lOrdner = FileView1.Dir
    rOrdner = FileView2.Dir
    Print lOrdner & "  |  " & rOrdner
    LCDLabel2.Text = Format(Date(Now), "dddd,dd,mm,yyyy")
    Funktionen.Spruch()
    Menu2.Visible = False
    Menu15.Visible = False
    If sLine3 = -1 Then TextBox1.NoTabFocus = False
    If sLine3 = -1 Then TextBox2.NoTabFocus = False
    If sLine4 = -1 Then FileView1.View = 3
    If sLine4 = -1 Then FileView2.View = 3
    If sLine5 = -1 Then FileView1.View = 1
    If sLine5 = -1 Then FileView2.View = 1
    If sLine5 = -1 Then FileView1.IconSize = 28
    If sLine5 = -1 Then FileView2.IconSize = 28
    If sLine6 = -1 Then FMain.Maximized = True
    
    If Not Exist("/usr/share/applications/data-scp.desktop") Then Menu29.Visible = False
    If Not Exist("/usr/share/applications/data-backup.desktop") Then Menu30.Visible = False
End


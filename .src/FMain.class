Public Sub USB()
    'externe Datenträger anzeigen
    Dim Verzeichnisse As String = "/media" &/ User.Name
    Dim Eintrag As String
    If Exist("/media/" & User.Name) Then 
        For Each Eintrag In Dir(Verzeichnisse)
            If Eintrag Then 
                Print "Der Eintrag ist: " & Eintrag
                If Eintrag > "" Then 
                    If Menu64.Visible = False Then
                        Menu64.Text = Verzeichnisse &/ Eintrag
                        Menu64.Visible = True
                        sUSB1 = Menu64.Text
                        Shell "lsblk -r -o NAME,MOUNTPOINT | awk '$2==" & "\"" & sUSB1 & "\" {print  $1}'" To sResultUSB1
                        Print "USB1-Gerät: "; sResultUSB1
                        Print sUSB1
                    Else 
                        If Menu65.Visible = False Then
                        Menu65.Text = Verzeichnisse &/ Eintrag
                        Menu65.Visible = True
                        sUSB2 = Menu65.Text
                    Else 
                        If Menu66.Visible = False Then
                        Menu66.Text = Verzeichnisse &/ Eintrag
                        Menu66.Visible = True
                        sUSB3 = Menu66.Text
                    Endif
                    Endif 
                    Endif 
                Endif
            Endif
        Next
    Else 
        Message.Info("Der Pfad /media/Benutzername/ zu externen Datenträgern\n existiert noch nicht. Dieser wird beim erstmaligen Einstecken\n von USB Datenträgern automatisch angelegt.", "OK")
    Endif 
End


Public Sub Button4_Click()
    ''Verschiebefunktion mit den Testroutinen für die jeweilige Seite
    Dim i As Integer
    
    If iLR = 1 Then QUELLPFAD = FileView1.Dir 'links
    If iLR = 2 Then QUELLPFAD = FileView2.Dir 'rechts
    InAction()
    'Verschieben von mehreren Dateien 
    If iLR = 1 Then                                                       'linke Auswahl nach rechts verschieben
        FileView2.Enabled = False
        FileView1.Enabled = False
        DirView1.Enabled = False
        If FileView1.Selection.Count > 0 Then 
            For i = 0 To FileView1.Selection.Count - 1
                Print i
                Print FileView1.Selection[i]
                QUELLE = FileView1.Dir &/ FileView1.Selection[i]
                Print QUELLE & " - Verschieben"
                If Exist(FileView2.Dir &/ FileView1.Selection[i]) Then 
                    TextLabel1.Text = "Die Datei " & FileView1.Selection[i] & " existiert schon und wird nicht verschoben."
                    Print FileView1.Selection[i] & "  ausgelassen, gibt es schon"
                    Wait 1
                Endif
                If Not Exist(FileView2.Dir &/ FileView1.Selection[i]) Then 
                    Try Shell "mv " & Shell(QUELLE) & " " & Shell(FileView2.Dir) Wait 
                    If Error Or If Process.LastValue <> 0 Then Print "Der Befehl move gab einen Fehler zurück." Else TextLabel1.Text = 
                    FileView1.Selection[i] & " >=> wurde verschoben."
                    'Funktionen.Verschieben()
                    Print QUELLE & "  wurde verschoben"
                    'TextLabel1.Text = Funktionen.sInfotext
                    Wait 0.5
                Endif 
            Next
        Endif 
        FileView1.Reload
        FileView2.Reload
        FileView2.Enabled = True
        FileView1.Enabled = True
        DirView1.Enabled = True
        FileView1.SetFocus
    Endif 
    'Verschieben von mehreren Dateien 
    If iLR = 2 Then                                                             'rechte Auswahl nach links verschieben
        FileView1.Enabled = False
        FileView2.Enabled = False
        DirView1.Enabled = False
        If FileView2.Selection.Count > 0 Then 
            For i = 0 To FileView2.Selection.Count - 1
                Print i
                Print FileView2.Selection[i]
                QUELLE = FileView2.Dir &/ FileView2.Selection[i]
                Print QUELLE & " - Verschieben"
                If Exist(FileView1.Dir &/ FileView2.Selection[i]) Then 
                    TextLabel1.Text = "Die Datei " & FileView2.Selection[i] & " existiert schon und wird nicht verschoben."
                    Print FileView2.Selection[i] & "  ausgelassen, gibt es schon"
                    Wait 1
                Endif
                If Not Exist(FileView1.Dir &/ FileView2.Selection[i]) Then 
                    Try Shell "mv " & Shell(QUELLE) & " " & Shell(FileView1.Dir) Wait 
                    If Error Or If Process.LastValue <> 0 Then Print "Der Befehl move gab einen Fehler zurück." Else TextLabel1.Text = 
                    FileView2.Selection[i] & " >=> wurde verschoben."
                    'Funktionen.Verschieben()
                    Print QUELLE & "  wurde verschoben"
                    Wait 0.5
                Endif
            Next
        Endif 
        FileView2.Reload
        FileView1.Reload
        FileView1.Enabled = True
        FileView2.Enabled = True
        DirView1.Enabled = True
        FileView2.SetFocus
    Endif
    InAction()
End

Public Function FormatSize(bytes As Long) As String
    'Dateigrößen formatieren
    Dim size As Float
    Dim units As String[] = ["B", "KB", "MB", "GB", "TB"]
    Dim u As Integer
    
    size = bytes 'wichtig
    
    While size >= 1024 And u < units.Count - 1
        size /= 1024
        Inc u
    Wend
    Return Format(size, "0.##") & " " & units[u]
End

Public Function DirSize(path As String) As Long
    'Rekursive Ordnergröße 
    Dim s As String
    Dim full As String
    Dim st As Stat
    Dim total As Long
    
    total = 0

    For Each s In Dir(path)
        If s = "." Or s = ".." Then Continue 
        full = path &/ s
        Try st = Stat(full)
        If Error Then Continue 
        If st.Type = gb.Directory Then 
            total += DirSize(full)
        Else 
            total += st.Size
        Endif
    Next
    Print "TOTAL FOR ", path, " = ", total
    Return total
End

Public Sub OpenWithDialog(full As String)
    'Öffnen mit Dialog
    Dim mime As String
    Dim outputs As String
    Dim lines As String[]
    Dim apps As New String[]
    Dim s As String

    'Sicherheitscheck
    If full = "" Then Return 
    If Not Exist(full) Then Return 
    
    ' MIME Typ holen
    mime = GetMimeTyp(full)
    If mime = "" Then 
        Message.Warning("Mime-Typ nicht ermittelbar.")
        Return 
    Endif
    
    'Anwendung über gio abfragen
    Shell "gio mime " & mime To outputs
    If outputs = "" Then 
        Message.Info("KeineAnwenung gefunden.")
        Return 
    Endif
    
    'Ausgabe zerlegen
    lines = Split(outputs, gb.NewLine)
    
    For Each s In lines
        s = Trim(s)
        'nur .desktop-Dateien
        'If Right(s, 8) = ".desktop" Then 
          If s Like "*.desktop" Then 
            apps.Add(s)
        Endif 
    Next
    
    If apps.Count = 0 Then 
        Message.Info("Keine passenden Anwendungen gefunden.")
        Return 
    Endif
    
    'Dialog anzeigen
    OeffnenMit.Apps = apps
    OeffnenMit.SelectedApp = ""
    OeffnenMit.ShowModal
    
    Print OeffnenMit.SelectedApp
    
    If OeffnenMit.SelectedApp = "" Then Return 
    
    Shell "gtk-launch " & OeffnenMit.SelectedApp & " " & Quote(full)
End

Public Sub GetMimeTyp(path As String) As String
    'Mime-Typ herausfinden
    Dim out As String
    
    Shell "file --mime-type -b " & Quote(path) To out
    Return Trim(out)
End



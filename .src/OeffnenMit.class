' Gambas class file

Public Apps As String[]
Static Public SelectedApp As String


Public Sub Form_Open()
    'Fenster wird angezeigt
    ListBox1.Clear
    For Each s As String In Apps
        ListBox1.Add(s)
    Next
    ListBox1.Remove(0)  'Dirty-Lösung, da der erste Eintrag (Standardanwendung) nicht als korrkte Anwendung zurück gegeben werden kann!
End

Public Sub Button1_Click()
    'OK
    If ListBox1.Index < 0 Then Return 
    Print ListBox1.Index
    SelectedApp = ListBox1.Text
    'Print SelectedApp
    Me.Close
    Wait 1
End
